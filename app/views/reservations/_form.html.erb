      <option value="選択肢2">冷蔵庫 x 2</option>
      <option value="選択肢3">冷蔵庫 x 3</option>
      <option value="選択肢4">冷蔵庫 x 4</option>
      <option value="選択肢5">冷蔵庫 x 1000</option>
   </select>

   <label class="control-label" for="">チェックイン</label>
   <%= f.datetime_select :startdate, {}, class: 'form-control' %>

   <label class="control-label" for="">チェックアウト</label>
   <%= f.datetime_select :enddate, {}, class: 'form-control' %>

   <% end %>

</div>


<div class="actions">
   <%= form_for @reservation do |f| %>
   <%= f.submit "予約する", class: "" %>
